<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="bl_app.form.login_type" class="Backlog\AppBundle\Form\Type\LoginType">
            <tag name="form.type" alias="bl_login" />
        </service>

        <service id="bl_app.form.register_type" class="Backlog\AppBundle\Form\Type\RegisterType">
            <argument type="service" id="security.encoder_factory" />
            <tag name="form.type" alias="bl_register" />
        </service>

        <service id="bl_app.form.story_type" class="Backlog\AppBundle\Form\Type\StoryType">
            <tag name="form.type" alias="bl_story" />
        </service>

        <service id="bl_app.form.backlog_type" class="Backlog\AppBundle\Form\Type\BacklogType">
            <tag name="form.type" alias="bl_backlog" />
        </service>

        <service id="bl_app.form.milestone_type" class="Backlog\AppBundle\Form\Type\MilestoneType">
            <tag name="form.type" alias="bl_milestone" />
        </service>

        <service id="bl_app.form.markdown_type" class="Backlog\AppBundle\Form\Type\MarkdownType">
            <argument type="service" id="bl_app.markdown_converter" />
            <tag name="form.type" alias="bl_markdown" />
        </service>
    </services>
</container>
